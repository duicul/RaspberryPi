#!/bin/bash
echo  `cat /etc/wpa_supplicant/wpa_supplicant.conf `
if test $# -ge 2
then
sudo chmod a+r  /etc/wpa_supplicant/wpa_supplicant.conf
echo $1 $2
echo `cat /etc/wpa_supplicant/wpa_supplicant.conf `
sudo chmod a+w /etc/wpa_supplicant/wpa_supplicant.conf 
if test  `cat /etc/wpa_supplicant/wpa_supplicant.conf|grep -e .*ssid.* | wc -l ` -eq 1
then 
 /etc/wpa_supplicant/wpa_supplicant.confcat /etc/wpa_supplicant/wpa_supplicant.conf | sed -e  s/ssid=\".*\"/ssid=\"$1\"/ | sed -e  s/psk=\".*\"/psk=\"$2\"  | tee  /etc/wpa_supplicant/wpa_supplicant.conf
fi
echo `cat /etc/wpa_supplicant/wpa_supplicant.conf `
fi
